# NetBox connection
NETBOX_URL=https://netbox.example.com
NETBOX_TOKEN=your-api-token-here
NETBOX_VERIFY_SSL=false

# Switch role filter (site определяется автоматически по серверам)
SWITCHES_ROLE=tor

# IPMI interface detection (comma-separated)
IPMI_INTERFACE_NAMES=IPMI,BMC,MGMT,iLO,iDRAC,CIMC

# SNMP settings for FDB collection
SNMP_COMMUNITY=public
SNMP_VERSION=2c
SNMP_TIMEOUT=5
SNMP_RETRIES=2

# Uplink ports to exclude (comma-separated)
UPLINK_PORTS=Ethernet49,Ethernet50,Ethernet51,Ethernet52

# Uplink patterns for ifAlias/description (comma-separated regex)
UPLINK_PATTERNS=uplink,to[-_]?spine,trunk,peer,mlag,lag,^po\d+,port[-_]?channel

# Stability: MAC must be seen on same port N times before creating cable
STABILITY_RUNS=2

# State database path
STATE_DB_PATH=state.db

# Poll interval in seconds (0 = one-shot mode)
POLL_INTERVAL=0

# Dry run mode (true = only log, don't create cables)
DRY_RUN=false

# Cable status: connected or planned
CABLE_STATUS=connected

# MLAG groups (format: switch1:switch2,switch3:switch4)
MLAG_GROUPS=
